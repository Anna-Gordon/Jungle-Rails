<h2>Login</h2>
<div class="row">
    <div class="col-sm-6 col-sm-offset-1">  
    <%= form_tag '/login', method: :post do %>
      <div class="form-group email">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <p>Don't have account yet. <%= link_to 'Sign Up', [:signup] %> here!</p>

      <%= submit_tag "Submit", class: 'btn btn-primary center' %>

    <% end %>
  </div>
</div>


