

<table>
    <% @order.line_items.each do |line_item| %>
      <img style="width: 50px; height: 50px;" src="<%= line_item.product.image %>">
      <p><b>Product:</b> <%=line_item.product.name %></p>
      <p><b>Description:</b> <%=line_item.product.description %></p>
      <p><b>Quantity:</b> <%= line_item.quantity %></p>
      <p><b>Price:</b> <%= humanized_money_with_symbol line_item.product.price_cents / 100.0 %></p>
    <% end %>
</table>
